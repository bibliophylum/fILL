<TMPL_INCLUDE NAME="header.tmpl">
<TMPL_INCLUDE NAME="submenu_myaccount.tmpl">

<script type="text/javascript">
  <!--
  set_secondary_tab("menu_myaccount_settings");
  //-->
</script>

<div id="center" role="main">
  <h4><TMPL_VAR NAME="status"></h4>
  <form METHOD=POST ACTION="">
    <input TYPE="hidden" NAME="lid" VALUE="<TMPL_VAR NAME=editLID>">
    <input TYPE="hidden" NAME="name" VALUE="<TMPL_VAR NAME=editName>">
 
      
	Email address:
	
	  <input TYPE="text" NAME="email_address" SIZE="80" MAXLENGTH="120" VALUE="<TMPL_VAR NAME=editEmail>">
	
      
	Library:
	
	  <input TYPE="text" NAME="library" SIZE="80" MAXLENGTH="120" VALUE="<TMPL_VAR NAME=editLibrary>">
	
      
	Interlibrary Loan Mailing address
	
	  
	    
	      Street address or PO Box Number:
	      
		<input TYPE="text" NAME="mailing_address_line1" SIZE="60" MAXLENGTH="200" VALUE="<TMPL_VAR NAME=editMailingAddressLine1>">
	      
	    
	      Town/City:
	      
		<input TYPE="text" NAME="city" SIZE="60" MAXLENGTH="6" VALUE="<TMPL_VAR NAME=editCity>">
	      
	    
	      Province:
	      
		<input TYPE="text" NAME="province" SIZE="2" MAXLENGTH="2" VALUE="<TMPL_VAR NAME=editProvince>">
	      
	    
	      Postal code:
	      
		<input TYPE="text" NAME="post_code" SIZE="6" MAXLENGTH="6" VALUE="<TMPL_VAR NAME=editPostalCode>"> (no spaces)
	      
	    
	

    <table id="fill-table">
      
	
	  <TMPL_IF NAME="editSlipsWithBarcodes">
	    <input TYPE="radio" NAME="slips_with_barcodes" VALUE='t' CHECKED>Yes<br/>
	    <input TYPE="radio" NAME="slips_with_barcodes" VALUE='f'>No<br/>
	  <TMPL_ELSE>
	    <input TYPE="radio" NAME="slips_with_barcodes" VALUE='t'>Yes<br/>
	    <input TYPE="radio" NAME="slips_with_barcodes" VALUE='f' CHECKED>No<br/>
	  </TMPL_IF>
	
	Do you want to print scannable patron barcodes on the date-due slips?
      
	
	  <TMPL_IF NAME="editCentralizedILL">
	    <input TYPE="radio" NAME="centralized_ill" VALUE='t' CHECKED>Yes<br/>
	    <input TYPE="radio" NAME="centralized_ill" VALUE='f'>No<br/>
	  <TMPL_ELSE>
	    <input TYPE="radio" NAME="centralized_ill" VALUE='t'>Yes<br/>
	    <input TYPE="radio" NAME="centralized_ill" VALUE='f' CHECKED>No<br/>
	  </TMPL_IF>
	
	Are you a headquarters library that centrally manages ILL for your branches?
      
    </table>

    <input TYPE="hidden" NAME="rm" VALUE="myaccount_settings_form">
    <br />
    <input type="submit" name="submit" value="Update" class="library-style" />
  </form>

</div>

