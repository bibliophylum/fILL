<settings target="catalogue.thompsonlibrary.com:210/*">

  <!-- Thompson Public Library targets -->

<set target="catalogue.thompsonlibrary.com:210/ILS"
                  name="pz:name" value="Thompson Public Library (Insignia)"/>

<!-- Maplin settings -->
<set target="catalogue.thompsonlibrary.com:210/ILS" name="requestby" value="Login"/>
<set target="catalogue.thompsonlibrary.com:210/ILS" name="requesturl" value="http://catalogue.thompsonlibrary.com/library/Search.aspx"/>
<!-- end Maplin settings -->


  <!-- settings apply to all targets -->

  <!-- mapping for unqualified search -->
  <set name="pz:cclmap:term" value="u=1016 t=l,r s=al 2=102"/>

  <!-- field-specific mappings -->
  <set name="pz:cclmap:au" value="u=1004 s=al"/>
  <set name="pz:cclmap:ti" value="u=4 s=al 2=102"/>
  <set name="pz:cclmap:su" value="u=21 s=al 2=102"/>
  <set name="pz:cclmap:isbn" value="u=7 2=102"/>
  <set name="pz:cclmap:issn" value="u=8 2=102"/>
  <set name="pz:cclmap:date" value="u=30 r=r 2=102"/>

  <!-- Retrieval settings -->

  <set name="pz:requestsyntax" value="marc21"/>
  <set name="pz:elements" value="F"/>

  <!-- Result normalization settings -->

  <set name="pz:nativesyntax" value="iso2709"/>
  <set name="pz:xslt" value="marc21.xsl"/>
  <!-- set name="pz:xslt" value="maplin.xsl"/ -->

</settings>
