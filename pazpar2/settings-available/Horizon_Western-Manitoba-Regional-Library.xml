<!-- Western Manitoba Regional Library -->
<settings target="*">

<!--settings target="wmrl.ipac.sirsidynix.net:210/wmrl" -->

  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:name" value="Western Manitoba Regional Library (Horizon)"/>
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="symbol" value="MBW"/>

  <!-- mapping for unqualified search -->
  <!--set name="pz:cclmap:term" value="u=4 t=l,r s=al 2=102"/-->  <!-- WRML doesn't support 'Any' search? -->
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:cclmap:term" value="u=1035 t=l,r s=al r=102"/>  <!-- WRML doesn't support 'Any' search? Uses 'Anywhere' instead. -->

  <!-- field-specific mappings -->
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:cclmap:au" value="u=1003 s=al"/>
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:cclmap:ti" value="u=4 s=al r=102"/>
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:cclmap:su" value="u=21 s=al r=102"/>
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:cclmap:isbn" value="u=7 r=102"/>
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:cclmap:issn" value="u=8 r=102"/>
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:cclmap:date" value="u=30 r=r r=102"/>

  <!-- Retrieval settings -->

  <!--  <set name="pz:requestsyntax" value="marc21"/> -->
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:requestsyntax" value="opac"/>
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:elements" value="F"/>

  <!-- Result normalization settings -->

  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:nativesyntax" value="iso2709"/>
  <!--  <set name="pz:xslt" value="marc21.xsl"/> -->
  <set target="wmrl.ipac.sirsidynix.net:210/wmrl" name="pz:xslt" value="opac.xsl"/>

</settings>
